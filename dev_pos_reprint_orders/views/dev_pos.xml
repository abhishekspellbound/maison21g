<?xml version="1.0" encoding="utf-8"?>
<!--
 -->
<odoo>
	<!-- Inherited view -->
	<record id="dev_view_pos_config_inherit_form" model="ir.ui.view">
		<field name="name">view.pos.config.inherit.form</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	    <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <h2>
                    Load POS Orders
                </h2>
                <div class="row mt16 o_settings_container" id="pos_orders">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="pos_payment">
	                     <div class="o_setting_left_pane">
	                         <field name="load_pos_order"/>
	                     </div>
	                     <div class="o_setting_right_pane">
	                         <label for="load_pos_order" string="POS Orders"/>
	                         <div class="text-muted">
	                             Load Orders to POS.
	                         </div>
	                     </div>
	                 </div>
             	</div>
			</xpath>
	    </field>
	</record>

</odoo>
        
