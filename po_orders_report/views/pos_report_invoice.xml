<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="po_orders_report_pdf">
            <t t-call="web.html_container">
                <t t-foreach="doc_ids" t-as="doc">
                    <t t-call="po_orders_report.po_orders_report_id" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="po_orders_report_id">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="address">
                        <address t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />

                        <t t-if="doc.company_id.country_id.vat_label" t-esc="doc.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <!--                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>-->
                    </t>

<!--                    <h2 class="text-center" style="text-transform:uppercase">POS Order Report</h2><br/><br/>-->
                    <h2>  Invoice:  <span t-if="doc.name != '/'" t-field="doc.name"/></h2><br/>

                    <div>
                        <div class="row mt32 mb32" id="informations">

                            <div class="col-auto mw-100 mb-2">
                                <strong>Date: </strong>
                                <span t-field="doc.date_order" style="margin-right:20px" />
                            </div><br></br>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Receipt Number: </strong>
                                <span t-field="doc.pos_reference" />
                            </div>

                            <!--                            <div class="col-auto mw-100 mb-2">-->
                            <!--                                <strong>Destination Location: </strong>-->
                            <!--                                <span t-field="doc.location_dest_id.name" />-->
                            <!--                            </div>-->
                            <!--                            <div class="col-auto mw-100 mb-2">-->
                            <!--                                <strong>Scheduled Date: </strong>-->
                            <!--                                <span t-field="doc.date_done" />-->
                            <!--                            </div>-->
                            <!--                            <div class="col-auto mw-100 mb-2">-->
                            <!--                                <strong>Type of Delivery: </strong>-->
                            <!--                                <span t-field="doc.x_studio_type_of_delivery"/>-->
                            <!--                            </div>-->
                        </div>
                    </div>
                    <br/>
                    <table class="table table-condensed table-striped table-bordered" name="lines" style="width:100%">
                        <thead>
                            <tr style="font-weight:bold;background-color: #eeeeee;">
                                <td>Description</td>
                                <td>Quantity</td>
                                <td>Unit Price</td>
                                <td>Disc</td>
                                <td>Taxes</td>
                                <td>Total Price</td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.lines" t-as="line">
                                <tr>
                                    <td>
                                        <t t-if="line.product_id.name">
                                            <span t-field="line.product_id.name"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.qty">
                                            <span t-field="line.qty"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.price_unit">
                                            <span t-field="line.price_unit"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.discount">
                                            <span t-field="line.discount"/>
                                        </t>

                                    </td>
                                    <td>
                                        <t t-if="line.tax_ids">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.price_subtotal_incl">
                                            <span t-field="line.price_subtotal_incl"/>
                                        </t>

                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br/><br/>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm;page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                    <!--                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">-->
                                    <!--                                        <tr style="">-->
                                    <!--                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">-->
                                    <!--                                                <td><span t-esc="amount_by_group[0]"/></td>-->
                                    <!--                                                <td class="text-right o_price_total">-->
                                    <!--                                                    <span t-esc="amount_by_group[3]" />-->
                                    <!--                                                </td>-->
                                    <!--                                            </t>-->
                                    <!--                                            <t t-else="">-->
                                    <!--                                                <td>-->
                                    <!--                                                    <span t-esc="amount_by_group[0]"/>-->
                                    <!--                                                    <span>&amp;nbsp;<span>on</span>-->
                                    <!--                                                        <t t-esc="amount_by_group[4]"/>-->
                                    <!--                                                    </span>-->
                                    <!--                                                </td>-->
                                    <!--                                                <td class="text-right o_price_total">-->
                                    <!--                                                    <span t-esc="amount_by_group[3]"/>-->
                                    <!--                                                </td>-->
                                    <!--                                            </t>-->
                                    <!--                                        </tr>-->
                                    <!--                                    </t>-->
                                    <!--                                    <tr class="border-black o_total">-->
                                    <!--                                        <td><strong>Total</strong></td>-->
                                    <!--                                        <td class="text-right">-->
                                    <!--                                            <span t-field="o.amount_total"/>-->
                                    <!--                                        </td>-->
                                    <!--                                    </tr>-->
                                </table>
                            </div>
                        </div>
                    </div>

                </t>
            </t>

        </template>

        <report
                id="pos_invoice_orders_maison"
                model="pos.order"
                string="Print Invoice"
                report_type="qweb-pdf"
                name="po_orders_report.po_orders_report_pdf"
                file="po_orders_report.po_orders_report_pdf"
        />

    </data>
</odoo>

