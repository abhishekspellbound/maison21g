<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ParfumeConfigButton">
        <div class='control-button js_parfume_config'>
            <i class="fa fa-gear"></i> Parfume Config
        </div>
    </t>

    <t t-extend="Orderline">
        <t t-jquery='t[t-if="line.get_discount_str() !== &apos;0&apos;"]' t-operation="after">
            <li class="info js_parfume_config" t-if="line.get_product().is_bottle">
                <div class="js_parfume_config">
                    <i class="fa fa-gear"></i> Parfume Config
                </div>
            </li>
        </t>
    </t>

    <t t-name="ParfumeConfigWIdget">
        <div class="modal-dialog" id="parfume_config_widget">
            <div class="popup touch-scrollable scrollable-y" style="width: 900px; min-height: 700px">
                <div class="card">
                    <h4 class="card-title">
                        <u>
                            Bottle Creation
                        </u>
                    </h4>
                    <div class="card-content" style="padding-top: 10px;">
                        <div class="table-responsive js-selected-scent-list" style="padding-top: 5px;">
                            <table class="table table-striped" style="width: 100%;">
                                <tbody>
                                    <tr class="line-select" data-scent-id="1">
                                        <td class="text-center" style="width: 18%;text-align: left;padding-left: 15px;">Bottle Name
                                        </td>

                                        <td class="text-center">
                                            <input type="text" class="bottle_name" t-att-value="widget.options.bottle_name || ''" placeholder="Bottle Name" disabled="disabled"/>
                                        </td>
                                    </tr>
                                    <tr class="line-select" data-scent-id="1">
                                        <td class="text-center" style="width: 15%;text-align: left;padding-left: 15px;">Engrave Name
                                        </td>
                                        <td class="text-center">
                                            <input type="text" name="section_name" t-att-value="widget.options.section_name  || ''" class="section_name" placeholder="Engrave Name" required="True"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <h4 class="card-title">
                            Selected Scent
                        </h4>
                        <div class="table-responsive js-selected-scent-list" style="padding-top: 5px;">
                            <table class="table table-striped" style="width: 100%;">
                                <tbody>
                                    <tr style="border-bottom: 1px solid;margin-bottom: 10px;">
                                        <td class="text-left">Name</td>
                                        <td class="text-left">Quantity</td>
                                        <td class="text-left">Uom</td>
                                        <td class="text-left"></td>
                                    </tr>
                                    <!-- <t t-foreach="widget.options.scent_order_lines" t-as="scent">
                                        <tr class="line-select" t-att-data-scent-id="scent.id">
                                            <td class="text-center"><t t-esc="scent.product.display_name"/></td>
                                            <td class="text-center">
                                                <input type="number" name="qty" class="qty" placeholder="Scent Qty" required="True"/>
                                            </td>
                                            <td class="text-left">Uom</td>
                                            <td class="text-center">
                                                <button t-attf-class="btn btn-danger delete_scent_#{scent.id}">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </t> -->
                                    <t t-if="widget.options.remaining_scents > 0">
                                        <tr>
                                            <td colspan="4">
                                                <a href="#" id="add_scent">Add Scent</a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="button confirm" id="con_button">
                        Confirm
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="new_scent">
        <tr class="new_scent">
            <td class="text-center">
                <input type="text" id="scent_id" name="scent[]['id']" class="scent_id" required="True"/>
            </td>
            <td class="text-center">
                <input type="number" name="scent[]['qty']" class="scent_qty" placeholder="Scent Qty" required="True"/>
            </td>
            <td class="text-left">
                <input type="text" disabled="disabled"/>
            </td>
            <td class="text-center">
                <button t-attf-class="btn btn-danger delete_scent">
                    <i class="fa fa-trash"></i>
                </button>
            </td>
        </tr>
    </t>
</templates>
